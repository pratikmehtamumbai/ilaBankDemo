<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10dp"
    android:layout_marginVertical="@dimen/_5dp">

    <ImageView
        android:id="@+id/ivList"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/ivList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivList"
        app:layout_constraintTop_toTopOf="@+id/ivList"
        tools:text="@string/label" />

    <View
        android:id="@+id/viewFooter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3dp"
        android:layout_marginVertical="@dimen/_8dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/ivList" />

</androidx.constraintlayout.widget.ConstraintLayout>